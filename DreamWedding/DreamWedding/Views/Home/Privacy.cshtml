@model DreamWedding.Models.ShowViewModel
@using System.Security.Claims;

@{
    ViewData["Title"] = "Reels Page";
}

<div class="container">
    <h1>Reels</h1>
    @if (Model != null)
    {
        @foreach (var post in Model.Reels)
        {
            if (post != null)
            {
                <div class="card mb-5" data-reel-id="@post.ReelsId">
                    <!-- Reels Header -->
                    <div class="card-header d-flex align-items-center">
                        <img class="profile-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQRXxfn1j1vKFy8yJeBGl2AS6Dcah-lKgHofg&s" alt="Profile Picture">
                        <div class="ms-3">
                            <h5 class="mb-0">@post.User.Name</h5>
                            <p class="mb-0 text-muted">Location</p>
                        </div>
                    </div>
                    <!-- Reels Video -->
                    @if (!string.IsNullOrEmpty(post?.ReelsVideo))
                    {
                        <video controls>
                            <source src="~/reels/@post.ReelsVideo" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    }
                    <!-- Reels Actions -->
                    <div class="card-body">
                        <div class="post-actions d-flex justify-content-between">
                            <div class="d-flex">
                                <svg class="me-3 like-btn" data-reel-id="@post.ReelsId" data-user-id="@post.User.Id" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <svg class="me-3 comment-btn" data-reel-id="@post.ReelsId" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v16c0 .94.5 1.78 1.3 2.23l.2.12c.46.26.99.4 1.53.4h10c.54 0 1.07-.14 1.53-.4l.2-.12c.8-.45 1.3-1.29 1.3-2.23V4M4 8h16"></path>
                                </svg>
                            </div>
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11l2 2-2 2m-7-2h7"></path></svg>
                        </div>
                        <!-- Reels Content -->
                        <div class="mt-3">
                            <p class="mb-1 fw-bold">100 likes</p>
                            <p class="mb-1"><span class="fw-bold">@post.User.Name</span> @post.Captions</p>
                            <p class="mb-1 text-muted">View all 10 comments</p>
                            <p class="text-muted text-uppercase" style="font-size: 0.75rem;">2 hours ago</p>
                        </div>
                        <!-- Comments Section -->
                        <div class="comments-section mt-3" style="display:none;">
                            <p class="fw-bold">Comments</p>
                            @*  @foreach (var comment in post.Comments)
                {
                <div class="comment">
                <span class="fw-bold">@comment.User.Name</span> @comment.Text
                </div>
                } *@
                            <!-- Add Comment Form -->
                            <div class="add-comment mt-3">
                                <input type="text" class="form-control comment-input" placeholder="Add a comment..." data-reel-id="@post.ReelsId" />
                                <button class="btn btn-primary mt-2 post-comment-btn" data-reel-id="@post.ReelsId" data-user-id="@post.User.Id">Post</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".comment-btn").click(function () {
                $(this).closest('.card-body').find('.comments-section').toggle();
            });

            $('.post-comment-btn').click(function () {
                var currentUserId = 'post.User.Id';
                var reelsId = $(this).data('reel-id');
                var userId = $(this).data('user-id');
                var commentText = $(this).closest('.add-comment').find('.comment-input').val();

                $.ajax({
                    url: '/Home/AddReelsComment',
                    type: 'POST',
                    data: {
                        reelsId: reelsId,
                        userId: userId,
                        commentText: commentText
                    },

                    success: function (response) {
                        console.log(response);
                        if (response.success) {
                            var newCommentHtml = '<div class="comment"><span class="fw-bold">' + response.userName + '</span> ' + response.commentText + '</div>';
                            $('.comments-section[data-post-id="' + reelsId + '"]').prepend(newCommentHtml);
                        } else {
                            alert('Failed to add comment');
                        }
                        console.log('Reels ID:', reelsId);
                        console.log('User ID:', userId);
                        console.log('Comment Text:', commentText);

                    },
                    error: function () {
                        alert('Error adding comment');
                    }
                });
            });

            $('.like-btn').click(function () {
                var reelId = $(this).data('reel-id');
                var userId = $(this).data('user-id');;

                $.ajax({
                    url: '/Home/ReelsLikePost',
                    type: 'POST',
                    data: {
                        reelId: reelId,
                        userId: userId
                    },
                    success: function (response) {
                        console.log(response);
                        if (response.success) {
                            var likesCount = response.likesCount;
                            $('div[data-post-id="' + reelId + '"] .likes-count').text(likesCount + ' likes');
                        } else {
                            alert('Failed to like the post');
                        }
                        console.log(reelId);
                        console.log(userId);
                    },
                    error: function () {
                        alert('Error liking post');
                    }
                });
            });
        });
    </script>
}