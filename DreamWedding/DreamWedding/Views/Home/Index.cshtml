@model DreamWedding.Models.ShowViewModel
@using System.Security.Claims;

@{
    ViewData["Title"] = "Home Page";
}

<br />

<div class="container">
    <!-- Stories Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div id="storiesCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="d-flex">
                            <div class="story-item me-2" data-story="Story 1">
                                <img src="https://via.placeholder.com/80" class="rounded-circle" alt="Story 1">
                                <p class="text-center mt-2">Story 1</p>
                            </div>
                            <div class="story-item me-2" data-story="Story 2">
                                <img src="https://via.placeholder.com/80" class="rounded-circle" alt="Story 2">
                                <p class="text-center mt-2">Story 2</p>
                            </div>
                            <div class="story-item me-2" data-story="Story 3">
                                <img src="https://via.placeholder.com/80" class="rounded-circle" alt="Story 3">
                                <p class="text-center mt-2">Story 3</p>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#storiesCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#storiesCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Posts Section -->
    <div class="card mb-5">
        <!-- Post Header -->
        <div class="card-header d-flex align-items-center">
            <img class="profile-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQRXxfn1j1vKFy8yJeBGl2AS6Dcah-lKgHofg&s" alt="Profile Picture">
            <div class="ms-3">
                <h5 class="mb-0">Username</h5>
                <p class="mb-0 text-muted">Location</p>
            </div>
        </div>
        <!-- Post Image -->
        <img class="post-img" src="https://t4.ftcdn.net/jpg/06/39/80/75/360_F_639807553_uwUKbAadh2moLIRDQo4vzYJo1CeQLNYH.jpg" alt="Post Image">
        <!-- Post Actions -->
        <div class="card-body">
            <div class="post-actions d-flex justify-content-between">
                <div class="d-flex">
                    <svg class="me-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                    <svg class="me-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v16c0 .94.5 1.78 1.3 2.23l.2.12c.46.26.99.4 1.53.4h10c.54 0 1.07-.14 1.53-.4l.2-.12c.8-.45 1.3-1.29 1.3-2.23V4M4 8h16"></path></svg>
                    <svg class="me-3 comment-btn" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4h16v16H4z"></path></svg>
                </div>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11l2 2-2 2m-7-2h7"></path></svg>
            </div>
            <!-- Post Content -->
            <div class="mt-3">
                <p class="mb-1 fw-bold">100 likes</p>
                <p class="mb-1"><span class="fw-bold">Username</span> Caption for the post goes here...</p>
                <p class="mb-1 text-muted">View all 10 comments</p>
                <p class="text-muted text-uppercase" style="font-size: 0.75rem;">2 hours ago</p>
            </div>
            <!-- Comments Section -->
            <div class="comments-section mt-3" style="display:none;">
                <p class="fw-bold">Comments</p>
                <div class="comment">
                    <span class="fw-bold">User1</span> Comment 1
                </div>
                <div class="comment">
                    <span class="fw-bold">User2</span> Comment 2
                </div>
                <!-- Add Comment Form -->
                <div class="add-comment mt-3">
                    <input type="text" class="form-control" placeholder="Add a comment..." />
                    <button class="btn btn-primary mt-2">Post</button>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        @foreach (var post in Model.Posts)
        {
            if (post != null)
            {
                <div class="card mb-5" data-post-id="@post.Id">
                    <div class="card-header d-flex align-items-center">
                        <img class="profile-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQRXxfn1j1vKFy8yJeBGl2AS6Dcah-lKgHofg&s" alt="Profile Picture">
                        <div class="ms-3">
                            <h5 class="mb-0">@post.User.Name</h5>
                            <p class="mb-0 text-muted">Location</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(post?.ImagePath))
                    {
                        <img class="post-img" src="~/images/@post.ImagePath" alt="Post Image" />
                    }
                    <div class="card-body">
                        <div class="post-actions d-flex justify-content-between">
                            <div class="d-flex">
                                <svg class="me-3 like-btn" data-post-id="@post.Id" data-user-id="@post.User.Id" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <svg class="me-3 comment-btn" data-post-id="@post.Id" onclick="savePost(@post.Id)" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v16c0 .94.5 1.78 1.3 2.23l.2.12c.46.26.99.4 1.53.4h10c.54 0 1.07-.14 1.53-.4l.2-.12c.8-.45 1.3-1.29 1.3-2.23V4M4 8h16"></path>
                                </svg>
                            </div>
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11l2 2-2 2m-7-2h7"></path></svg>
                        </div>
                        <div class="mt-3">
                            <p class="mb-1 fw-bold">100 likes</p>
                            <p class="mb-1"><span class="fw-bold">@post.User.Name</span> @post.Caption</p>
                            <p class="mb-1 text-muted">View all @* @post.Comments.Count comments *@</p>
                            <p class="text-muted text-uppercase" style="font-size: 0.75rem;">2 hours ago</p>
                        </div>
                        <!-- Comments Section -->
                        <div class="comments-section mt-3" style="display:none;">
                            <p class="fw-bold">Comments</p>
                            @*  @foreach (var comment in post.Comments)
                {
                <div class="comment">
                <span class="fw-bold">@comment.User.Name</span> @comment.Text
                </div>
                } *@
                            <!-- Add Comment Form -->
                            <div class="add-comment mt-3">
                                <input type="text" class="form-control comment-input" placeholder="Add a comment..." data-post-id="@post.Id" />
                                <button class="btn btn-primary mt-2 post-comment-btn" data-post-id="@post.Id" data-user-id="@post.User.Id">Post</button>
                            </div>
                        </div>
                    </div>
                </div>

            }
        }
    }
</div>

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

        function savePost(postId) {
            $.ajax({
                url: '/Home/SavePost',
                type: 'POST',
                data: {
                    postId: postId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    alert(response);
                },
                error: function () {
                    alert('Error saving post');
                }
            });
        }

        $(document).ready(function () {
            $(".comment-btn").click(function () {
                $(this).closest('.card-body').find('.comments-section').toggle();
            });

            $('.story-item').on('click', function () {
                const story = $(this).data('story');
                $('#storyModalLabel').text(story);
                $('#storyModalBody').html(`<p>Content for ${story}</p>`); // Replace with actual story content
                $('#storyModal').modal('show');
            });

            $('.post-comment-btn').click(function () {
                var currentUserId = 'post.User.Id';
                var postId = $(this).data('post-id');
                var userId = $(this).data('user-id');
                var commentText = $(this).closest('.add-comment').find('.comment-input').val();

                $.ajax({
                    url: '/Home/AddComment',
                    type: 'POST',
                    data: {
                        postId: postId,
                        userId: userId,
                        commentText: commentText
                    },

                    success: function (response) {
                        console.log(response);
                        if (response.success) {
                            var newCommentHtml = '<div class="comment"><span class="fw-bold">' + response.userName + '</span> ' + response.commentText + '</div>';
                            $('.comments-section[data-post-id="' + postId + '"]').prepend(newCommentHtml);
                        } else {
                            alert('Failed to add comment');
                        }
                        console.log('Post ID:', postId);
                        console.log('User ID:', userId);
                        console.log('Comment Text:', commentText);

                    },
                    error: function () {
                        alert('Error adding comment');
                    }
                });
            });

            $('.like-btn').click(function () {
                var postId = $(this).data('post-id');
                var userId = $(this).data('user-id');;

                $.ajax({
                    url: '/Home/LikePost',
                    type: 'POST',
                    data: {
                        postId: postId,
                        userId: userId
                    },
                    success: function (response) {
                        console.log(response);
                        if (response.success) {
                            var likesCount = response.likesCount;
                            $('div[data-post-id="' + postId + '"] .likes-count').text(likesCount + ' likes');
                        } else {
                            alert('Failed to like the post');
                        }
                        console.log(postId);
                        console.log(userId);
                    },
                    error: function () {
                        alert('Error liking post');
                    }
                });
            });
        });
    </script>
}
