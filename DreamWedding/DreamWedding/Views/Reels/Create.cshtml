@model ReelsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="VideoFile"></label>
        <input asp-for="VideoFile" type="file" class="form-control" />
        <span asp-validation-for="VideoFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Caption"></label>
        <textarea asp-for="Caption" class="form-control"></textarea>
        <span asp-validation-for="Caption" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

